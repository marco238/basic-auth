<div id="signup">
  <h2>Signup</h2>
  <form action="/signup" method="POST">
    <label for="input-username"> Username </label>
    <input value="{{user.username}}" type="text" id="input-username" name="username" placeholder="Your username" />
 
    <label for="input-email"> Email </label>
    <input value="{{user.email}}" type="email" id="input-email" name="email" placeholder="Your email" />
 
    <label for="input-password"> Password </label>
    <input type="password" name="password" id="input-password" placeholder="********" />
 
    <button type="submit">Create account</button>
 
    {{!-- error message will be added here --}}
    {{#if errors}}
      <p class="error">{{errors}}</p>
    {{/if}}
  </form>
</div>